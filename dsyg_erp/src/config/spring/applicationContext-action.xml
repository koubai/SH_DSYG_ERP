<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	
	<!-- etbPurchase -->
	<bean id="etbPurchaseAction" class="com.cn.dsyg.action.EtbPurchaseAction" scope="session">
		<property name="etbPurchaseService">
			<ref bean="etbPurchaseService"/>
		</property>
	</bean>
	
	<!-- 用户 -->
	<bean id="userLoginAction" class="com.cn.dsyg.action.UserLoginAction" scope="session">
		<property name="resourceService">
			<ref bean="resourceService"/>
		</property>
		<property name="userService">
			<ref bean="userService"/>
		</property>
		<property name="roleService">
			<ref bean="roleService"/>
		</property>
	</bean>
	
	<!-- frame -->
	<bean id="frameAction" class="com.cn.dsyg.action.FrameAction" scope="session">
	</bean>

	<!-- 供应商 -->
	<bean id="supplierAction" class="com.cn.dsyg.action.SupplierAction" scope="session">
		<property name="supplierService">
			<ref bean="supplierService" />
		</property>
	</bean>

	<!-- 快递 -->
	<bean id="etbDeliveryAction" class="com.cn.dsyg.action.EtbDeliveryAction" scope="session">
		<property name="deliveryService">
			<ref bean="deliveryService" />
		</property>
	</bean>

	<!-- 客户 -->
	<bean id="etbCustomerAction" class="com.cn.dsyg.action.EtbCustomerAction" scope="session">
		<property name="customerService">
			<ref bean="customerService" />
		</property>
	</bean>

	<!-- 固定资产信息 -->
	<bean id="etbAssetsAction" class="com.cn.dsyg.action.EtbAssetsAction" scope="session">
		<property name="assetsService">
			<ref bean="assetsService" />
		</property>
	</bean>

	<!-- 员工档案信息 -->
	<bean id="etbPersonalAction" class="com.cn.dsyg.action.EtbPersonalAction" scope="session">
		<property name="personalService">
			<ref bean="personalService" />
		</property>
	</bean>

	<!-- 文件物品信息 -->
	<bean id="etbDocumentAction" class="com.cn.dsyg.action.EtbDocumentAction" scope="session">
		<property name="documentService">
			<ref bean="documentService" />
		</property>
	</bean>
	
	<!-- 验证码 -->
	<bean id="randomActionBean" class="com.cn.dsyg.action.ValidateCodeAction" />
	
	<!-- 登录拦截器 -->
	<bean id="loginInterceptorBean" class="com.cn.dsyg.interceptor.LoginInterceptor"/>

</beans>